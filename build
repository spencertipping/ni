#!/bin/bash
# Builds the ni image, first by assembling the self-modifying parts (./boot),
# and then by telling it to add modules.

cd $(dirname $0)

./boot

export NI_NO_HOME=yes           # IMPORTANT
./ni --internal/lib \
  core/gen \
  core/json \
  core/deps \
  \
  core/conf \
  core/stream \
  core/meta \
  core/monitor \
  core/uri \
  core/fn \
  core/closure \
  core/destructure \
  \
  core/checkpoint \
  core/net \
  core/buffer \
  core/script \
  \
  core/col \
  core/row \
  core/cell \
  core/assert \
  \
  core/pl \
  core/rb \
  core/lisp \
  core/sql \
  core/python \
  \
  core/bloom \
  core/binary \
  core/matrix \
  core/gnuplot \
  core/image \
  \
  core/http \
  core/caterwaul \
  core/jsplot \
  \
  core/docker \
  core/hadoop \
  core/pyspark \
  \
  doc

./ni --dev/doc-check

./test --update

for t in $(ni --doc); do
  ./ni $t $(./ni $t) > reference/${t#--doc/}.md
done

if [[ `./ni //ni` != "$(< ni)" ]]; then
  echo "ni is unstable under replication" >&2
  exit 1
fi

unset NI_NO_HOME

wc -c ni
