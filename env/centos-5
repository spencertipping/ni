FROM centos:5
RUN yum install -y sqlite perl curl bzip2 xz epel-release-5-4 gcc
RUN yum install -y sbcl lzop lz4 strace ruby
RUN yum install -y numpy
RUN yum install -y nc
RUN ln /usr/bin/sqlite3 /usr/bin/sqlite
ADD ni /usr/bin/
ADD dev/test-data/etc-passwd /etc/passwd

ENV SKIP_DOCKER=yes

VOLUME /data
WORKDIR /data
CMD /bin/bash
