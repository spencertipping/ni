FROM archlinux:base
RUN pacman -Sy
RUN pacman -S --noconfirm \
      sqlite sbcl lzop grep ruby python3 python-numpy openbsd-netcat gcc \
      docker diffutils
RUN ln /usr/bin/sqlite3 /usr/bin/sqlite
ADD ni /usr/bin/
ADD dev/test-data/etc-passwd /etc/passwd

RUN touch /notestdir

VOLUME /data
WORKDIR /data
CMD /bin/bash
